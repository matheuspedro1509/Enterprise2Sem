@model Fiap.Exemplo04.Web.MVC.Models.Jogador
@{
    ViewBag.Title = "Cadastrar";
}

<h2>Cadastro de Jogador</h2>

@if(TempData["msg"] != null)
{
    <div class="alert alert-success">@TempData["msg"]</div>
}

@using (Html.BeginForm())
{
    <div class="form-group">
        @Html.LabelFor(j => j.Nome)
        @Html.TextBoxFor(j => j.Nome, new { @class = "form-control"})
    </div>
    <div class="form-group">
        @Html.LabelFor(j => j.Numero)
        @Html.TextBoxFor(j => j.Numero, new { @class = "form-control"})
    </div>
    <div class="form-group">
            @Html.LabelFor(j => j.Time)
            @Html.DropDownListFor(j => j.TimeId,
                        ViewBag.times as SelectList,
                        "Selecione",
                        new { @class = "form-control"})
    </div>
    <input type="submit" value="Salvar" class="btn btn-primary"/>
}
