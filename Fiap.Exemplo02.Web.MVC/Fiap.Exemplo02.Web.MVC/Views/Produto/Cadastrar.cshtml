@model Fiap.Exemplo02.Web.MVC.Models.Produto
@{
    ViewBag.Title = "Cadastrar";
}

<h2>Cadastrar Produto</h2>

@if(TempData["mensagem"] != null)
{
    <div class="alert alert-success">
        @TempData["mensagem"]
    </div>
}

@using (Html.BeginForm())
{
    <div class="form-group">
        @Html.LabelFor(p => p.Nome)
        @Html.TextBoxFor(p => p.Nome,
                         new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(p => p.Preco)
        @Html.TextBoxFor(p => p.Preco,
                         new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(p => p.Descricao)
        @Html.TextAreaFor(p => p.Descricao,
                         new { @class = "form-control" })
    </div>
    <div>
        @Html.LabelFor(p => p.DataFabricacao)
        @Html.TextBoxFor(p => p.DataFabricacao,
                           new {@class = "form-control"})
    </div>
    <input type="submit" value="Cadastrar" class="btn btn-primary" />
}


